{% extends 'admin.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <h3>Manager</h3> 
        {# <a href="{{path('event_create')}}">
            <button type="button" class="btn btn-outline-primary"> Insert </button>
        </a> #}
    </div>

    <div class="page-content">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
    </div>

    <div class="card">
        <div class="container mb-3">
            <div class="table-responsive text-dark">
                <table class="table table-hover text-dark">
                    <thead class = "text-dark">
                        <tr>
                            <th class = "text-dark">ID</th>
                            <th class = "text-dark">Name</th>
                            <th class = "text-dark">Email</th>
                            <th class = "text-dark">Detail</th>
                            <th class = "text-dark">Action</th>
                        </tr>
                    </thead>
                    <tbody class="table table-hover">
                        {% for a in account %}
                            <tr>
                                <td class = "text-black-50">{{a.id}}</td>
                                <td class = "text-black-50">{{a.email}}</td>
                                <td class = "text-black-50">{{a.name}}</td>
                                <td>
                                    <a href="{{path('account_edit',{'id':a.id})}}">Edit</a>
                                </td>
                                <td>
                                    <a href="{{path('account_delete',{'id':a.id})}}">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}