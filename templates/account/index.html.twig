{% extends 'home.html.twig' %}

{% block title %}Account update!{% endblock %}

{% block body %}
<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="month mx-auto my-4">
      <div id="current-time">
        <script>
          var curDate = new Date();
          var curDay = curDate.getDate();
          var curYear = curDate.getFullYear();
          var curMonth = curDate.getMonth() + 1;
          document.getElementById('current-time').innerHTML = curDay + "-" + curMonth + "-" + curYear;
        </script>
      </div>
    </div>

    <div class="card">
      <div class="container mb-3">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <th class=" text-black-50"> Id </th>
              <th class=" text-black-50"> Name </th>
              <th class=" text-black-50"> Email </th>
            </thead>
            <tbody>
              <th class=" text-black-50">{{ userId }}</th>
              <th class=" text-black-50">{{ userName }}</th>
              <th class=" text-black-50">{{ userEmail }}</th>
            </tbody>
          </table>
        </div>
      </div>
    </div>
        
    <div class="text-center my-3">
      <button class="btn btn-lg btn-primary">
        <a href = "{{path('accDetailCreate')}}" class = "text-white">
          Update
        </a>
      </button>
    </div>
  </div>
</div>
{% endblock %}