{% extends "admin.html.twig" %}
{% block title %}
    Admin Page - new Host
{% endblock %}
{% block body %}
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <h3> Add a new host :3 </h3>
    </div>
    <div class="page-content mt-4">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    {# <form class="form form-vertical" method="POST" action="#"> #}
                    {{ form_start(form,{'attr':{'class':'form form-vertical'}} ) }}
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12 my-1 ">
                                    <div class="form-group">
                                        <label for="first-name-vertical"> Name </label>
                                        {{ form_widget(form.Name, {'attr':{'placeholder':'Host Name'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical"> Age </label>
                                        {{ form_widget(form.Age, {'attr':{'placeholder':'Age'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical">Job</label>
                                        {{ form_widget(form.Job, {'attr':{'placeholder':'Job'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="image-vertical"></label>
                                        {{ form_widget(form.file) }}
                                    </div>
                                </div>

                                {{ form_widget(form.Image) }}
                                    <div class="pt-3">
                                    {% set img = form.Image.vars.value %}
                                        {% if img %}
                                            <img src="{{asset('uploads/'~img)}}"
                                        class="w-25 shadow p-3 mb-5 bg-body rounded" />
                                        {% else %}
                                            <img src="https://cdn2.iconfinder.com/data/icons/symbol-blue-set-3/100/Untitled-1-94-512.png"
                                        class="w-25 shadow p-3 mb-5 bg-body rounded" />
                                        {% endif %}
                                        
                                    </div>
                                <div class="col-12 d-flex justify-content-end pt-2">
                                
                                    {{ form_widget(form.save,{'attr':{'class':'btn btn-primary me-2'}}) }}
                                    <button type="reset"
                                        class="btn btn-secondary">Reset</button>
                                </div>
                            </div>
                        </div>
                    {# </form> #}
                    {{ form_end(form) }}
                </div> <!--card body-->
            
            </div> <!--card content-->
        </div> <!--card-->
    </div><!--page content-->
{% endblock %}