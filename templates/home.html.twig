<div class = "padding">
  <div class = "container">
    <div class = "row">
      {% for a in events %}
        <div class = "col-lg-3 col-md-3 col-sm-6 col-xs-12 my-4">
          {{ a.eventName }}
          <br>
          {{ a.eventStartDay|date("m/d/Y") }}
          <br>
          {{ a.eventEndDay|date("m/d/Y") }}
          <br>
          {% if a.eventImage != null %}
            {% set image = a.eventImage %}
            <img src="{{asset('uploads/'~image)}}" width = "40%" height = "40%"/>
          {% endif %}
          <br>
          {{ a.eventDetail }}
          <br>
          <button class="btn btn-outline-success">
              <a href = "{{path('event_register',{'id':a.id})}}"> REGIST HERE </a>
          </button>
        </div>
      {% endfor %}
    </div>
