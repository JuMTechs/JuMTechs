{% extends "admin.html.twig" %}
{% block title %}
    Admin Page - Event Add
{% endblock %}
{% block body %}
    <div class="page-content mt-4">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    {# <form class="form form-vertical" method="POST" action="#"> #}
                    {{ form_start(form,{'attr':{'class':'form form-vertical'}} ) }}
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="first-name-vertical">Event Name</label>
                                        {{ form_widget(form.eventName, {'attr':{'placeholder':'Event name'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical">Event start date</label>
                                        {{ form_widget(form.eventStartDay, {'attr':{'placeholder':'Event start day'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical">Event end date</label>
                                        {{ form_widget(form.eventEndDay, {'attr':{'placeholder':'Even end day'}}) }}
                                    </div>
                                </div>
                                
                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical">Event detail</label>
                                        {{ form_widget(form.eventDetail, {'attr':{'placeholder':'Event detail'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="contact-info-vertical"> Host ID </label>
                                        {{ form_widget(form.host, {'attr':{'placeholder':'Event host ID'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="image-vertical"> Any Image for the event? </label>
                                        {{ form_widget(form.file) }}
                                    </div>
                                </div>

                                {{ form_widget(form.eventImage) }}
                                    <div class="pt-3">
                                    {% set img = form.eventImage.vars.value %}
                                        {% if img %}
                                            <img src="{{asset('uploads/'~img)}}"
                                        class="w-25 shadow p-3 mb-5 bg-body rounded" />
                                        {% else %}
                                            <img src="https://cdn2.iconfinder.com/data/icons/symbol-blue-set-3/100/Untitled-1-94-512.png"
                                        class="w-25 shadow p-3 mb-5 bg-body rounded" />
                                        {% endif %}
                                    </div>

                                <div class="col-12 my-1">
                                    <div class="form-group">
                                        <label for="first-name-vertical">Event create day</label>
                                        {{ form_widget(form.created)}}
                                    </div>
                                </div>
                                    
                                <div class="col-12 my-1 d-flex justify-content-end pt-2">
                                
                                    {{ form_widget(form.save,{'attr':{'class':'btn btn-primary me-2'}}) }}
                                    <button type="reset"
                                        class="btn btn-secondary">Reset</button>
                                </div>
                            </div>
                        </div>
                    {# </form> #}
                    {{ form_end(form) }}
                </div> <!--card body-->
            
            </div> <!--card content-->
        </div> <!--card-->
    </div><!--page content-->
{% endblock %}