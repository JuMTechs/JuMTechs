{% extends 'admin.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <h3>Manager</h3> <a href="{{path('event_create')}}">
        <button type="button" class="btn btn-outline-primary">Insert</button></a>
    </div>
    <div class="page-content">
    <div class="btn-group" role="group" aria-label="Basic outlined example">

    </div>
    <div class="card">
        <div class="container mb-3">
            <div class="table-responsive text-nowrap">
            <table class="table table-striped">
            <thead>
                <tr>
                <th>#</th>
                <th>Event Name</th>
                <th>Event start</th>
                <th>Event end</th>
                <th>Detail</th>
                <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for c in events %}
                    <tr>
                        <td>{{ c.id}}</td>
                        <td>{{ c.event}}</td>
                        <td>{{ c.eventStartDay|date("m/d/Y")}}</td>
                        <td>{{ c.eventEndDay|date("m/d/Y")}}</td>
                        <td>{{ c.eventDetail}}</td>
                        <td>{{ c.createDay|date("m/d/Y")}}</td>
                        <td>
                        <a href="{{path('event_edit',{'id':c.id})}}">Edit</a>
                        <a href="{{path('event_delete',{'id':c.id})}}">Delete</a></td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
    </div>
    </div>
{% endblock %}