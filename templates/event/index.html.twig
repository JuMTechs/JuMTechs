{% extends 'admin.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <h3>Manager</h3> <a href="{{path('event_create')}}">
        <button type="button" class="btn btn-outline-primary">Insert</button></a>
    </div>
    <div class="page-content">
    <div class="btn-group" role="group" aria-label="Basic outlined example">

    </div>
    <div class="card">
        <div class="container mb-3">
            <div class="table-responsive text-nowrap">
            <table class="table table-striped">
            <thead>
                <tr>
                <th class = "text-dark">ID</th>
                <th class = "text-dark">Event Name</th>
                <th class = "text-dark">Event start</th>
                <th class = "text-dark">Event end</th>
                <th class = "text-dark">Event created day</th>
                <th class = "text-dark">Detail</th>
                <th class = "text-dark">Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for c in events %}
                    <tr>
                        <td>{{ c.id}}</td>
                        <td>{{ c.eventName}}</td>
                        <td>{{ c.eventStartDay|date("m/d/Y")}}</td>
                        <td>{{ c.eventEndDay|date("m/d/Y")}}</td>
                        <td>{{ c.eventDetail}}</td>
                        <td>{{ c.created|date("m/d/Y")}}</td>
                        <td> 
                            <a href="{{path('event_edit',{'id':c.id})}}"> Edit </a>
                        </td>
                        <td>
                            <a href="{{path('event_delete',{'id':c.id})}}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
    </div>
    </div>
{% endblock %}