{% extends 'admin.html.twig' %}

{% block title %} Admin Page - Event List{% endblock %}

{% block body %}
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <h3>Event Manager</h3>
    </div>
    <div class="page-content">
    <div class="btn-group" role="group" aria-label="Basic outlined example">

    </div>
    <div class="card">
        <div class="container mb-3">
            <div class="table-responsive text-nowrap">
            <table class="table table-striped">
            <thead>
                <tr>
                <th>#</th>
                <th>Event Name</th>
                <th>Event start</th>
                <th>Event end</th>
                <th>Detail</th>
                <th>Host ID</th> 
                <th>Created date</th>
                <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                {% for c in event %}
                    <tr>
                        <td>{{ c.id }}</td>
                        <td>{{ c.eventName }}</td>
                        <td>{{ c.eventStartDay|date("m/d/Y") }}</td>
                        <td>{{ c.eventEndDay|date("m/d/Y") }}</td>
                        <td>{{ c.eventDetail }}</td>
                        <td>{{ c.host.id }}</td>
                        <td>{{ c.created|date("m/d/Y")}}</td>
                        <td> 
                            <a href="{{path('event_edit',{'id':c.id})}}"> Edit </a>
                            <a href="{{path('event_delete',{'id':c.id})}}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
    </div>
</div>
{% endblock %}